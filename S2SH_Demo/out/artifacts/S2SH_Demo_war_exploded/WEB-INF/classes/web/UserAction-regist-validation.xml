<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
     "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="userName">
        <field-validator type="requiredstring">
            <message key="errors.username.required"/>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message key="errors.password.required"/>
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <message key="errors.email.required"/>
        </field-validator>
        <field-validator type="email">
            <message key="errors.email.format"/>
        </field-validator>
    </field>
</validators>
